{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "ignorePatterns": ["temp.js", "__test__/*.js"],
    "env": {
        "es2021": true,
        "browser": true,
        "amd": true,
        "node": true
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-global-assign": ["error", {"exceptions": ["length"]}]
    },
    "overrides": [
        {
          "files": ["test/*.test.js"],
          "rules": {
            "require-jsdoc": "off"
          }
        }
      ]
}


